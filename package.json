{
  "name": "dependabit",
  "version": "0.1.10",
  "private": true,
  "description": "dependabot for resources, related projects, and knowledge",
  "type": "module",
  "author": "Pradeep Mouli",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pradeepmouli/dependabit.git"
  },
  "workspaces": [
    "packages/*",
    "packages/plugins/*"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "clean": "pnpm -r run clean && find packages -name 'tsconfig.tsbuildinfo' -delete && rm -rf node_modules/.cache",
    "clean:all": "pnpm -r exec rm -rf dist node_modules && rm -rf node_modules",
    "changeset": "changeset",
    "changeset:publish": "changeset publish",
    "changeset:version": "changeset version && node scripts/sync-root-version.mjs",
    "dev": "pnpm -r --parallel run dev",
    "format": "oxfmt .",
    "format:check": "oxfmt --check .",
    "fresh": "pnpm clean:all && pnpm install",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "type-check": "pnpm -r run type-check"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^25.2.3",
    "@typescript/native-preview": "7.0.0-dev.20260210.1",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.31.0",
    "oxlint": "^1.46.0",
    "simple-git-hooks": "^2.13.1",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.28.0"
}
