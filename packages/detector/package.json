{
  "name": "@dependabit/detector",
  "version": "0.1.13",
  "description": "LLM-based dependency detection for external resources",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsgo -p tsconfig.json",
    "clean": "rm -rf dist",
    "dev": "tsx watch src/index.ts",
    "type-check": "tsgo --noEmit -p tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@dependabit/github-client": "workspace:*",
    "@dependabit/manifest": "workspace:*",
    "ignore": "^7.0.5",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "dependency",
    "detection",
    "llm",
    "ai"
  ],
  "license": "MIT"
}
