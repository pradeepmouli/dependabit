{
  "name": "@dependabit/action",
  "version": "0.1.0",
  "description": "GitHub Action entry points for dependency tracking",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:action": "tsc -p tsconfig.json && ncc build dist/index.js -o action-dist --source-map --license licenses.txt",
    "clean": "rm -rf dist action-dist",
    "dev": "tsx watch src/index.ts",
    "type-check": "tsc --noEmit -p tsconfig.json",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@dependabit/detector": "workspace:*",
    "@dependabit/manifest": "workspace:*",
    "@dependabit/monitor": "workspace:*",
    "@dependabit/github-client": "workspace:*",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "@vercel/ncc": "^0.38.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "github-action",
    "dependency",
    "tracking"
  ],
  "license": "MIT"
}
